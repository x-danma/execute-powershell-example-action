{
    "compilerOptions": {
      "target": "es2017",
      "module": "esnext",
      "outDir": "lib",
      "alwaysStrict": true,
      "moduleResolution": "node",
      "noImplicitAny": false,
      "esModuleInterop": true,
      "noUnusedLocals": true
    },
    "include": [
      "src/index.ts"
    ],
    "typeAcquisition": {
      "enable": true
    },
    "compileOnSave": true
  }
  